{{> menu}}

<div class="hero" id="hero">
    {{{background "hero" head.image}}}
    <div>
        <img src="/public/images/logo_symbol_white.svg" class="logo" />
        {{{common.about.tagline}}}
    </div>
</div>

<section class="works">
    <h2>Work</h2>

    <div class="work">
        {{#each projects}}
        <div class="project" id="{{id}}">
            {{{background id image}}}
            <div class="overlay">
                <a href="{{link}}">
                    {{name}}
                    <span>{{description}}</span>
                </a>
            </div>
        </div>
        {{/each}}
    </div>

    <a href="/works">Full work list</a>
</section>

{{> footer}}
